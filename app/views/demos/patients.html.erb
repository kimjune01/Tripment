<!DOCTYPE HTML>

<html>
	<head>
		<title>Retrospect by TEMPLATED</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<%= stylesheet_link_tag "main" %>

	</head>
	<body class="landing">

		<!-- Header -->
			<header id="header" class="alt">
				<h1 style="color:black">TRIPMENT</h1>
				<!-- <a href="#nav">Menu</a> -->
			</header>

		<!-- Nav -->
			<nav id="nav">
				<ul class="links">
					<li><a href="index.html">Home</a></li>
					<li><a href="generic.html">Generic</a></li>
					<li><a href="elements.html">Elements</a></li>
				</ul>
			</nav>

		<!-- Banner -->
			<section id="banner">
				<h1 style="font-size:70px;">PATIENTS</h1>
				<ul class="actions">
					<li><a href="/demo" class="button big special">Back</a></li>
				</ul>
			</section>

		<!-- One -->
		<% @patients.each do |patient| %>
			<section id="one" class="wrapper style1">
				<div class="inner">
					<article class="feature left">
						<span class="image"><img src="john.jpg" alt="" /></span>
						<div class="content">
							<h2>Name: <%= patient.name %></h2>
							<ul>
							<li>Desired Treatment: <%= patient.treatment_id %></li>
							<li>Description: patient.detail</li>
							<li>Budget: patient.max_price</li>
							</ul>
							<ul class="actions">
								<li>
									<a href="#" class="button alt">More</a>
								</li>
							</ul>
						</div>
				</div>
			</section>
		<% end %>

		<!-- Scripts -->
		<%= javascript_include_tag "jquery.min" %>
		<%= javascript_include_tag "skel.min" %>
		<%= javascript_include_tag "util" %>
		<%= javascript_include_tag "main" %>

	</body>
</html>
