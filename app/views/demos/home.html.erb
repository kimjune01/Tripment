			</nav>

		<!-- Banner -->
			<section id="banner">
				<img ID="logo" src="images/logo.png"></img>
				<h2>Medical tourism made easy</h2>
				<ul class="actions">
					<li><a href="/find_treatment" class="button big special">Find your treatment</a></li>
					<li><a href="/find_patient" class="button big special2">Find your patient</a></li>
